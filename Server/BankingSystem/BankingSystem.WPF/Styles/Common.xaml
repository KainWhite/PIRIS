<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BankingSystem.WPF.Styles">
  <Color x:Key="GreenColor">#799540</Color>
  <Color x:Key="DarkGreenColor">#50632b</Color>

  <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"></SolidColorBrush>
  <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkGreenColor}"></SolidColorBrush>
</ResourceDictionary>